{
  "name": "freedeck-app",
  "version": "0.0.1",
  "description": "The FreeDeck App",
  "main": "./build/App.js",
  "scripts": {
    "dev": "nodemon --watch \"./src/**\" --ext \"js,ts\" --exec 'npm run build && npm run start' ./build/App.js",
    "start": "electron ./build/App.js",
    "build": "tsc -p tsconfig.json"
  },
  "author": "Kilian Gosewisch",
  "license": "ISC",
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "electron": "^16.0.1",
    "electron-builder": "^22.14.5",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "electronVersion": "16.0.1",
    "appId": "com.freeyourstream.freedeck-app",
    "directories": {
      "output": "../build"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "../node_modules/**/*"
    ]
  }
}
